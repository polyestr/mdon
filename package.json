{
    "name": "mdon",
    "displayName": "MDon",
    "glyph": "Î¨M",
    "version": "1.0.0-alpha.5",
    "description": "Stupid simple inline markdown fields used by the Polyestr application framework.",
    "author": "Saleh Abdel Motaal <saleh@grasppe.com>",
    "license": "MIT",
    "main": "lib/index",
    "types": "lib/index.d.ts",
    "repository": {
        "url": "https://github.com/polyestr/mdon",
        "type": "git"
    },
    "bin": {
        "mdon~": "lib/index.js",
        "mdon": "lib/index.mjs"
    },
    "scripts": {
        "md~": "mdon~ *.md",
        "md": "mdon *.md",
        "test-md~": "mdon~ ./test/package -m README.md",
        "test-md": "mdon ./test/package -m README.md",
        "test-glob-md~": "mdon~ ./test/package ./test/package/*.md",
        "test-glob-md": "mdon ./test/package ./test/package/*.md",
        "test-glob": "yarn run test-glob-md~ && yarn run test-glob-md",
        "test-yarn": "cd ./test/package; yarn test-yarn-md; cd ../../",
        "test-api": "cd ./test/package; yarn mdapi; cd ../../",
        "test": "yarn run test-md~ && yarn run test-md && yarn test-glob && yarn test-yarn",
        "build": "tsc",
        "prepare": "yarn build && yarn test && yarn md"
    },
    "keywords": [
        "markdown",
        "template",
        "documentation-generator",
        "hackable",
        "zero-dependency",
        "tooling",
        "package-management",
        "mjs",
        "package-json"
    ]
}
